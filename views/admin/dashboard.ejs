<!DOCTYPE html>
<html lang="en">
<head>
  <title>Admin Dashboard</title>
  <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 p-8">
  <h2 class="text-center font-bold text-3xl text-indigo-600 mb-6">Admin Dashboard</h2>
<%- include('partials/navbar') %>
  <div class="flex gap-3 mb-6 justify-center">
    <a href="/admin/course/new" class="px-4 py-2 bg-green-500 hover:bg-green-600 text-white rounded">+ Add Course</a>
    <a href="/admin/subject/new" class="px-4 py-2 bg-blue-500 hover:bg-blue-600 text-white rounded">+ Add Subject</a>
    <a href="/admin/logout" class="px-4 py-2 bg-red-500 hover:bg-red-600 text-white rounded">Logout</a>
  </div>

  <h2 class="text-center font-bold text-2xl text-indigo-600 mb-4">Courses</h2>

  <div class="space-y-4">
    <% courses.forEach((course, index) => { %>
      <div x-data="{ open: false }" class="border border-gray-200 rounded-lg shadow bg-white">
        <!-- Header -->
        <button 
          @click="open = !open" 
          class="w-full flex justify-between items-center px-4 py-3 text-left text-lg font-medium text-gray-800 hover:bg-gray-100 rounded-t-lg"
        >
          <span><%= course.name %> (<%= course.code %>)</span>
          <svg :class="{'rotate-180': open}" class="w-5 h-5 transition-transform transform" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
          </svg>
        </button>

        <!-- Content -->
        <div x-show="open" x-transition class="px-4 py-3 border-t border-gray-200">
          <p><strong>Description:</strong> <%= course.description %></p>
          <p>
            <a href="<%= course.pageUrl %>" target="_blank" class="text-indigo-600 hover:underline">View Course Page</a>
          </p>
          <form action="/admin/course/<%= course._id %>/delete" method="POST" class="mt-3">
            <button 
              type="submit" 
              onclick="return confirm('Are you sure you want to delete this course? This will also remove its subjects.')" 
              class="px-3 py-1 bg-red-500 hover:bg-red-600 text-white rounded text-sm"
            >
              Delete
            </button>
          </form>
        </div>
      </div>
    <% }) %>
  </div>
</body>
</html>
