<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= course.name %> - NUP Affiliated Colleges</title>
    <!-- Custom CSS -->
  <link rel="stylesheet" href="/style.css">
</head>
<body class="bg-gray-50 text-gray-800">

  <!-- Navbar -->
  <%- include('partials/navbar') %>

  <!-- Course Header -->
  <div class="max-w-5xl mx-auto mt-24 px-4">
    <h1 class="text-3xl font-bold text-blue-700"><%= course.name %></h1>
    <p class="text-gray-600 mt-2"><%= course.description %></p>
  </div>

  <!-- Group subjects semester-wise -->
  <div class="max-w-5xl mx-auto px-4 my-8">
    <% let currentSemester = null; %>
    <% subjects.forEach((subject, index) => { %>
      <% if (subject.semester !== currentSemester) { %>
        <% if (currentSemester !== null) { %></div><% } %>
        <h2 class="text-2xl font-semibold text-blue-600 mt-10 mb-4">
          Semester <%= subject.semester %>
        </h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <% currentSemester = subject.semester; %>
      <% } %>

      <!-- Subject Card -->
      <div class="bg-white border rounded-lg p-5 shadow hover:shadow-lg transition cursor-pointer">
        <div class="font-semibold text-lg text-gray-700 mb-3">
          <%= subject.subjectCode %> - <%= subject.subjectName %>
        </div>
        <a href="<%= subject.folderLink %>" 
           class="inline-block px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition"
           target="_blank">
          Go to Folder
        </a>

        <% if (typeof user !== "undefined" && user === process.env.ADMIN_USERNAME) { %>
          <!-- Delete button only visible for admin -->
          <form action="/admin/subject/<%= subject._id %>/delete" method="POST" class="mt-3">
            <button 
              class="px-3 py-1 text-sm bg-red-600 text-white rounded hover:bg-red-700 transition" 
              type="submit"
              onclick="return confirm('Delete this subject?')">
              Delete
            </button>
          </form>
        <% } %>
      </div>
    <% }) %>
    </div>
  </div>

  <!-- Footer -->
<%- include('partials/footer') %>

  <script>
    function openFolder(url) {
      window.open(url, '_blank');
    }
  </script>
</body>
</html>
